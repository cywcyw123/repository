<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login2Activity">

    <LinearLayout
        android:id="@+id/llt0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5555DD"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Applidium"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textView2"
                android:paddingLeft="80dp"
                android:paddingRight="50dp"
                android:text="11:27 AM"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textView8"
                android:paddingLeft="70dp"
                android:text="100%"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/llt1"
            android:layout_marginTop="-1dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="64dp"
                android:layout_height="44dp"
                app:srcCompat="@drawable/ic_nav_back" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt3"
            android:layout_width="match_parent"
            android:layout_height="90dp"

            android:orientation="horizontal">
            />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Sign in to your account"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="vertical">
            />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="325dp"
                android:layout_height="64dp"
                android:ems="10"
                android:gravity="center"
                android:hint="E-mail address"
                android:inputType="textPersonName" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/llt5"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            >
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
                android:gravity="center"
            >
                <EditText

                    android:id="@+id/editText4"
                    android:paddingTop="40dp"
                    android:layout_width="325dp"
                    android:layout_height="70dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Password"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="35dp"
                android:paddingLeft="310dp"
                >
                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="54dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_closeeye"
                    />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llt6"
            android:layout_width="match_parent"
            android:layout_height="81dp"

            android:gravity="center">


            <Button
                android:id="@+id/button7"
                android:layout_width="325dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_btn1"
                android:gravity="center"
                android:text="Sign in"
                android:textAllCaps="false"
                android:textSize="20sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/llt7"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:orientation="horizontal">
            />

            <Button
                android:id="@+id/button8"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_btn2"
                android:text="Create an account?"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="#ffadf2fb"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/button8"
                android:background="@drawable/bt_btn2"
                android:text="Forget your password?"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="#ffadf2fb"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llt8"
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:orientation="vertical">
            />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="Log in with"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/llt9"
            android:layout_width="match_parent"
            android:layout_height="88dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="226dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/ic_facebook" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="115dp"
                android:layout_height="45dp"
                android:layout_toRightOf="@id/imageView6"
                app:srcCompat="@drawable/ic_google" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llt10"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:orientation="vertical">
            />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="nordlux"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>